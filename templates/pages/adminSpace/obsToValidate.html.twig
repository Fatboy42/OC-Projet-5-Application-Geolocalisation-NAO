{% extends 'base.html.twig' %}

{% block body %}

    <header id="head" class="secondary"></header>

    <!-- container -->
    <div class="container">

        <ol class="breadcrumb">
            <li><a href="index.html">Accueil</a></li>
            <li class="active">Page d'administration</li>
        </ol>

        <div class="row">
            <div class="row">
                <p></p>
            </div>
            <!-- Sidebar -->
            <aside class="col-md-4 sidebar sidebar-left " id="sidebarMenu">

                <!--div class="row" id="sidebarMenu"></div-->
                <div class="row widget" id="obsLink">
                    <div class="col-xs-12 text-center">
                        <h4 id="title-user">{{ username }}</h4>
                    </div>
                </div>
                <div class="row widget" id="obsLink">
                    <div class="col-xs-12">
                        <h4><a href="#">Mes observations</a></h4>
                    </div>
                </div>
                <div class="row widget">
                    <div class="col-xs-12">
                        <h4><a href="{{ asset('observForm') }}">Saisir une observation</a></h4>
                    </div>
                </div>
                <div class="row widget">
                    <div class="col-xs-12">
                        <h4><a href="#">Gérer les membres</a></h4>
                        <p>Commun à tous les admins</p>
                    </div>
                </div>
                <div class="row widget">
                    <div class="col-xs-12">
                        <h4><a href="{{ asset('obsToValidate') }}">Les observations à valider</a></h4>
                    </div>
                </div>

            </aside>
            <!-- /Sidebar -->

            <!-- Article main content -->
            <article class="col-md-8 maincontent">
                <header class="page-header">
                    <h1 class="page-title" id="observToValidate">Mes observations à valider</h1>
                </header>
                <section class="row obs">
                    <!-- faire une boucle pour récupérer les datas d'obs -->
                    {% for obs in observations %}
                        <div id="obs_{{ obs.id }}">
                            <u><h5 class="h5 title-obs">{{ obs.observationTitle }}</h5></u>
                            <div class="col-lg-7">
                                <p>
                                    <span class="title-obs">Date de l'observation :</span> {{ obs.postDate | date("d/m/Y") }}
                                </p>
                                <p><span class="title-obs">Commentaire de l'observation :</span> {{ obs.comment }} </p>
                                <p><span class="title-obs">Oiseau observé : </span> {{ obs.bird.nomDeReference }}</p>

                            </div>
                            <div class="col">
                                <p><img class="img_obs" src="{{ asset('images/martin-pecheur.jpg') }}"></p>
                                <span class="numObs" name="obsNum_{{ loop.index }}"
                                      id="obsNum_{{ loop.index }}">{{ obs.id }}</span>
                            </div>
                            <div class="row btn-group btn-grp-obs" data-path="{{ asset('updateObs') }}">
                                <a class="btn-action btn btn-obs" name="validBtn_{{ obs.id }}"
                                   href="{#{ asset('updateObs') }#}" type="button">Valider</a>
                                <button class="btn-action btn btn-obs" name="RefuseBtn_{{ obs.id }}" type="submit">
                                    Refuser
                                </button>
                                <!-- envoi vers fenêtre modale pour motif -->
                            </div>

                            <p id="encadre"></p>
                        </div>
                    {% endfor %}
                </section>


            </article>
            <!-- /Article -->

        </div>
    </div>    <!-- /container -->


{% endblock %}
